{
  "version": 2,

  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "^/api/(.*)$",
      "dest": "/api/$1"
    },
    {
      "src": "^(?!/api/).*$",
      "dest": "/index.html"
    }
  ],

  "functions": {
    "api/[...path].ts": {
      "includeFiles": "build/server/**"
    }
  }
}
