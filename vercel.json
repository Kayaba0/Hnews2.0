{
  "version": 2,
  "functions": {
    "api/[...path].ts": {
      "runtime": "nodejs20.x",
      "includeFiles": "build/server/**"
    },
    "api/index.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
